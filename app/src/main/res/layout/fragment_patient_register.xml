<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/register"
        android:layout_marginBottom="15dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please fill up the following information"
        android:textSize="25dp"
        android:fontFamily="cursive"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="10dp">
    </TextView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Type your First Name"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:drawableStart="@drawable/ic_baseline_person_outline_24"
                android:drawablePadding="5dp"
                android:inputType="textPersonName">

            </EditText>


            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Type your Last Name"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:drawableStart="@drawable/ic_baseline_person_outline_24"
                android:drawablePadding="5dp"
                android:inputType="textPersonName">

            </EditText>

            <EditText
                android:id="@+id/regEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Type your Email"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="5dp"
                android:inputType="textEmailAddress">

            </EditText>


            <EditText
                android:id="@+id/regPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Type your Password"
                android:drawableLeft="@drawable/ic_outline_lock_24"
                android:drawableStart="@drawable/ic_outline_lock_24"
                android:drawablePadding="5dp"
                android:inputType="textPassword">

            </EditText>

            <EditText
                android:id="@+id/regConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Confirm Password"
                android:drawableLeft="@drawable/ic_outline_lock_24"
                android:drawableStart="@drawable/ic_outline_lock_24"
                android:drawablePadding="5dp"
                android:inputType="textPassword">

            </EditText>

            <EditText
                android:id="@+id/contactNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Valid Mobile Number"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="5dp"
                android:inputType="text">

            </EditText>

            <AutoCompleteTextView
                android:id="@+id/regLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Select your district"
                android:drawableLeft="@drawable/ic_baseline_add_location_24"
                android:drawableStart="@drawable/ic_baseline_add_location_24"
                android:drawablePadding="5dp"
                android:inputType="text"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/male_female">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="30sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:shadowColor="@color/purple_500"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="male"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:id="@+id/male"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="female"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/female"/>
            </RadioGroup>

            <Button
                android:id="@+id/btnSignUpGuardian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#4CAF50"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold">

            </Button>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
