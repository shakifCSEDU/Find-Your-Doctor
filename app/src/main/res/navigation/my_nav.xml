        android:id="@+id/tipsFragment"
        android:name="com.example.myapplication.tipsFragment"
        android:label="Tips"
        tools:layout="@layout/fragment_tips" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myapplication.profileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/doctorHomeFragement"
        android:name="com.example.myapplication.DoctorHomeFragement"
        android:label="fragment_doctor_home_fragement"
        tools:layout="@layout/fragment_doctor_home_fragement" />
